/*This should drive the motors forward. Set at 255 but can be changed as needed. It also assumes one of the motors is upside down and therefore does not need a negative value to run the same way as the other motor.*/


int turnLeft(int duration){
set_motor(1, 127);
sleep1(0, 500000);
set_motor(2, -255);
sleep(0, 500000);
}
return 0;)


int turnRight(int duration){
set_motor(1, 255);
sleep1(0, 500000);
set_motor(2, -127);
sleep(0, 500000);
}
return 0;)
/*This depends on which way around the motors are. Depending on which one is upside down.*/

int driveBackward(duration){
set_motor(1, -127);
sleep1(0, 500000);
set_motor(2, -127);
sleep(0, 500000);
}
return 0;)

